---
import type { ImageMetadata } from "astro";

interface Props {
  text: string;
  backgroundImage: ImageMetadata;
}

const { text, backgroundImage } = Astro.props;
---

<article
  style={{
    backgroundImage: `url(${backgroundImage.src})`,
    backgroundRepeat: "no-repeat",
    backgroundSize: "cover",
  }}
>
  <p class="montserrat-extrabold">{text}</p>
</article>

<style>
  article {
    width: 295px;
    height: 391px;
    border-radius: 50px 30px;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  p {
    margin: 0;
    margin-top: 3rem;
    width: 254px;
    font-size: 1.25rem;
    color: var(--white);
    text-align: center;
    text-wrap: pretty;
  }
</style>
